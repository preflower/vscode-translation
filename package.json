{
	"name": "vscode-translation",
	"displayName": "Easy Translator",
	"description": "A simple translation extension for VS Code",
	"version": "0.0.2",
	"publisher": "preflower",
	"engines": {
		"vscode": "^1.43.0"
	},
	"keywords": [
		"翻译",
		"translator",
		"translation",
		"translate",
		"language"
	],
	"license": "MIT",
	"categories": [
		"Other"
	],
	"icon": "assets/icon.jpg",
	"repository": {
		"type": "git",
		"url": "https://github.com/preflower/vscode-translation.git"
	},
	"activationEvents": [
		"workspaceContains:*.*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"hoverProvider": "true",
		"configuration": {
			"title": "Easy Translator",
			"properties": {
				"easy-translator.defaultLanguage": {
					"type": "string",
					"default": "zh-cn",
					"description": "配置转换后的语言"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.43.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"cheerio": "^1.0.0-rc.3",
		"got": "^10.7.0",
		"translation-google": "^0.2.1"
	}
}
