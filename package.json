{
	"name": "vscode-translation",
	"displayName": "easy-translation",
	"description": "A simple translation extension for VS Code",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:*.*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"hoverProvider": "true",
		"configuration": {
			"title": "Easy Translation",
			"properties": {
				"easy-translation.defaultLanguage": {
					"type": "string",
					"default": "zh-cn",
					"markdownDescription": "配置要转换的语言，有道默认互换(因为有道转换规则 中-转换语言)，谷歌只支持单方向转换"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.43.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"cheerio": "^1.0.0-rc.3",
		"got": "^10.7.0",
		"translation-google": "^0.2.1"
	}
}
